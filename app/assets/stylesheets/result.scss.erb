.hand {
  font-size: 40px;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 10px 20px;
  border-radius: 10px;
  margin-top: 30px;
  margin-bottom: 15px;
}

.alert {
  text-align: left;
  font-size: 20px;
  color: orangered;
  padding: 10px 40px 0px 40px;
  margin-top: 20px;
  border-radius: 5px;
  background-color: #fff;
  background-image:
          linear-gradient(#eee .1em, transparent .1em);
  background-size: 100% 1.5em;
}

li {
  padding-bottom: 30px;
}
