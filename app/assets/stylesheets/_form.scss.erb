input[type="text"] {
  width: 400px;
  height: 60px;
  font-size: 40px;
  text-align: center;
  border: none;
  outline: none;
  margin: 30px 0;
}
::placeholder {
  opacity: 0.25;
}

input[type="text"]:focus,
textarea {
  box-shadow: 0 0 7px #1abc9c;
  border: 1px solid #1abc9c;
}

input[type="submit"] {
  font-size: 30px;
  color: white;
  text-align: center;
  border-radius: 100vh;
  border: 1px solid gray;
  outline: none;
  background-color: rgba(143, 188, 143, 1.0);
  padding: 5px 40px;
}



input[type="submit"]:hover {
  background-color: rgba(143, 188, 143, 0.8);
}