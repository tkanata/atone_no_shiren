<div>
  <h2><span class="h2_span">Pokers#result</span></h2>
 
  <%= render partial: "layouts/form", locals: { poker: @poker } %>

  <% unless @poker.errors.any? %>
    <div class="hand">
      <%= @hand %>
      <%# byebug %>
    </div>
  <% end %>

  <div>
    <% if @poker.errors.any? %>
      <div class = "alert">
        <ul>
        <% @poker.errors.full_messages.each do |message| %>
          <li><%= message %> <br>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>

